@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj takmičenje</h2>

<form asp-action="Snimi">
    <input type="hidden" asp-for="SkolaDomacinId" />
    <label>Skola domacin: </label>
    <span>@Model.SkolaDomacin</span>
    <br /><br />
    <label>Predmet: </label>
    <select class="form-control" asp-for="PredmetId" asp-items="@Model.Predmeti"></select>
    <label>Razred: </label>
    <select class="form-control" asp-for="Razred">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
    <label>Datum: </label>
    <input asp-for="Datum" class="form-control"/>
    <br /><br />
    <input class=" btn btn-primary" type="submit" value="Snimi"
</form>